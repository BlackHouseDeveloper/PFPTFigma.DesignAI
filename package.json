{
  "name": "pfpt-design-ai",
  "version": "1.0.0",
  "description": "External automation repo for PFPT UI token management and code generation",
  "type": "module",
  "scripts": {
    "figma:pull": "node tools/figma-token-build/scripts/figma-pull.mjs",
    "tokens:build": "node tools/figma-token-build/scripts/build-tokens.mjs",
    "a11y:check": "node tools/a11y/a11y-check.mjs",
    "sync": "pnpm run figma:pull && pnpm run tokens:build && pnpm run a11y:check",
    "codegen": "node tools/codegen/generate-components.mjs"
  },
  "keywords": [
    "figma",
    "design-tokens",
    "style-dictionary",
    "accessibility",
    "design-system"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "style-dictionary": "^4.0.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
